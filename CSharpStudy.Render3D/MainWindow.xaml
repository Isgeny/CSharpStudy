<Window x:Class="CSharpStudy.Render3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
        xmlns:render3D="clr-namespace:CSharpStudy.Render3D"
        xmlns:geometry="clr-namespace:CSharpStudy.Render3D.Geometry"
        Title="Helix Toolkit Study"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.DataContext>
        <render3D:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ViewPort3DStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="MeshModelsTemplate" DataType="geometry:IMeshViewModel">
                <hx:MeshGeometryModel3D Geometry="{Binding Geometry}"
                                        Material="{Binding Material}" />
            </DataTemplate>
        </ResourceDictionary>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <hx:Viewport3DX Grid.Column="0" Style="{StaticResource Viewport3DStyle}" ModelUpDirection="0,0,1">
            <hx:Viewport3DX.InputBindings>
                <KeyBinding Command="hx:ViewportCommands.ZoomExtents" Gesture="Control+E" />
                <MouseBinding Command="hx:ViewportCommands.Rotate" Gesture="LeftClick" />
                <MouseBinding Command="hx:ViewportCommands.Zoom" Gesture="MiddleClick" />
                <MouseBinding Command="hx:ViewportCommands.Pan" Gesture="MiddleClick" />
            </hx:Viewport3DX.InputBindings>

            <hx:Viewport3DX.Camera>
                <hx:PerspectiveCamera x:Name="Camera"
                                      Position="0,-25,0"
                                      LookDirection="0,1,0"
                                      UpDirection="0,0,1" />
            </hx:Viewport3DX.Camera>
            <hx:Viewport3DX.EffectsManager>
                <hx:DefaultEffectsManager />
            </hx:Viewport3DX.EffectsManager>
            <hx:AmbientLight3D />

            <hx:ItemsModel3D ItemsSource="{Binding MeshModels}"
                             ItemTemplate="{StaticResource MeshModelsTemplate}" />
        </hx:Viewport3DX>

        <Grid Grid.Column="1" Width="200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Position:" />
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding ElementName=Camera, Path=Position, Mode=TwoWay}" />

            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="LookDirection:" />
            <TextBox Grid.Row="1" Grid.Column="1"
                     Text="{Binding ElementName=Camera, Path=LookDirection, Mode=TwoWay}" />

            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="UpDirection:" />
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding ElementName=Camera, Path=UpDirection, Mode=TwoWay}" />
        </Grid>
    </Grid>
</Window>